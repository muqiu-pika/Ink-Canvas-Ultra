<Window
    x:Class="Ink_Canvas.ChangeLogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:local="clr-namespace:Ink_Canvas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="版本更新 - Ink Canvas Ultra"
    Width="600"
    Height="390"
    ui:ThemeManager.RequestedTheme="Light"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closed="Window_Closed"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Label Margin="20,0" Content="Ink Canvas 画板功能更新！" FontSize="26" />
        <!-- 移除所有更新日志相关的显示内容 -->
        <Grid Grid.Row="1" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="16" Text="新版本已发布，点击下方按钮查看完整更新日志" TextWrapping="Wrap" TextAlignment="Center" />
        </Grid>
        <Label Grid.Row="3"
            Name="LabelVersion"
            Margin="20,0"
            VerticalContentAlignment="Center"
            FontSize="12" />
        <Button Grid.Row="3"
            Width="150"
            Margin="10"
            HorizontalAlignment="Center"
            Click="Button_Click"
            Content="查看更新日志" />
    </Grid>
</Window>
